<div class="container">
  <div class="row">
    <div class="col-sm-3">
  <h1>User info</h1>
  <%= attachment_image_tag @user, :profile_image_id, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size: '100x100' %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th>
          <%= @user.name %>
        </th>
      </tr>
      <tr>
        <th>introduction</th>
        <th>
          <%= @user.introduction %>
        </th>
      </tr>
    </tbody>
  </table>
  <% if @user == current_user %>
    <%= link_to edit_user_path(@user.id) do %>
      <div class="btn btn-outline-secondary" style="width: 100%;"><i class="fas fa-user-cog"></i></div>
    <% end %>
  <% end %>
  </div>
  <div class="col-sm-8 col-offset-1"></div>
  </div>
</div>