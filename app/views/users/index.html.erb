<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/new', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @users.each do |users| %>
            <td>
              <%= attachment_image_tag users, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40", class: "rounded" %>
            </td>
            <td>
              <%= users.name %>
            </td>
            <td>
              <%= link_to "Show", user_path(users.id) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
