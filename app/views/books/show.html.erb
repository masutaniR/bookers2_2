<p id="notice" class="text-success">
  <%= notice %>
</p>
<div class="container">
  <div class="row">

      <div class="col-md-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/new', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@books.user) do %>
                <%= attachment_image_tag @books.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %>
                <p><%= @books.user.name %></p>
              <% end %>
            </td>
            <td>
              <%= @books.title %>
            </td>
            <td>
              <%= @books.body %>
            </td>
            <% if @books.user == current_user %>
            <td>
              <%= link_to "Edit", edit_book_path(@books), class: "btn btn-success" %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@books), method: :delete, class: "btn btn-danger" %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>