<p id="notice" class="text-success">
  <%= notice %>
</p>
<div class="container">
  <div class="row">
    <%= render "layouts/error_messages", model: @book %>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/new', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th>
            </th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |books| %>
          <tr>
            <td>
              <%= link_to user_path(books.user) do %>
                <%= attachment_image_tag books.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(books) do %>
                <%= books.title %>
              <% end %>
            </td>
            <td>
              <%= books.body %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>